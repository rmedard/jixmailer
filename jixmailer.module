use Drupal\Core\Entity\EntityInterface;
use \Drupal\node\NodeInterface;

/**
 * Implements hook_mail().
 */
function jixmailer_mail($key, &$message, $params){
    $options = array(
        'langcode' => $message['langcode'],
    );

    switch ($key){
        case 'job_insert':
            $message['headers']['Content-Type'] = 'text/html; charset=UTF-8; format=flowed; delsp=yes';
            $message['subject'] = t('Un nouveau job créé: @title', array('@title' => $params['subject']));
            $message['body'][] = $params['message'];
            $message['options'] = [];
            if (isset($params['options']) && !empty($params['options'])){
                foreach ($params['options'] as $key => $value){
                    $message['options'][$key] = $value;
                }
            }
            break;
        case 'job_published':
            $message['from'] = Drupal::config('system.site')
                    ->get('name') . ' <' . Drupal::config('system.site')->get('mail') . '>';
            $message['subject'] = t('Votre offre d\'emploi chez @site est validée', [
                '@site' => Drupal::config('system.site')->get('name'),
            ], $options);
            $message['body'][] = $params['message'];
            break;
    }
}

/**
 * Implements hook_entity_insert().
 */
function jixmailer_entity_insert(EntityInterface $entity){
    if (!$entity instanceof NodeInterface || $entity->bundle() !== 'job'){
        return;
    }

    $mailManager = Drupal::service('plugin.manager.mail');
    $module = 'jixmailer';
    $key = 'job_insert';
    $to = $entity->get('field_job_contact_email')->getString();
    $reply = NULL;
    $send = TRUE;

    $params['message'] = $entity->getTitle();
    $params['subject'] = $entity->label();
    $params['options']['title'] = t('Iyi ni title');
    $params['options']['footer'] = t('Iyi ni footer');
    $langcode = Drupal::languageManager()->getDefaultLanguage()->getName();
    $result = $mailManager->mail($module, $key, $to, $langcode, $params, $reply, $send);
    if ($result['result'] !== true){
        $message = t('Error sending email to @email after creation of job nid: @id', array('@email' => $to, '@id' => $entity->id()));
        drupal_set_message($message, 'error');
        Drupal::logger('jixmailer')->error($message);
        return;
    }
    $message = t('Email notification sent to @email after creation of job nid: @id', array('@email' => $to, '@id' => $entity->id()));
    drupal_set_message($message, 'status');
    Drupal::logger('jixmailer')->notice($message);
}